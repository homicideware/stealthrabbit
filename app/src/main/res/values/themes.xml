<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.StealthRabbit" parent="Theme.Material3.Light.NoActionBar">
        <item name="snackbarStyle">@style/Widget.Mirivan.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.Mirivan.Snackbar.TextView</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorSurface</item>
    </style>

    <style name="Theme.StealthRabbit.Transparent" parent="Theme.StealthRabbit">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
